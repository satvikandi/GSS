<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android "
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:background="@drawable/app_bg" >

    <TextView
        android1:id="@+id/tv"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_below="@+id/imageView1"
        android1:gravity="center_horizontal"
        android1:padding="10dp"
        android1:text="The ultimate shopping experience for Smart Phones.."
        android1:textColor="#FFFFFF"
        android1:textSize="20sp" />

    <ImageView
        android1:id="@+id/imageView2"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentTop="true"
        android1:layout_centerHorizontal="true"
        android1:src="@drawable/gsstext" />

    <ImageView
        android1:id="@+id/imageView1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentTop="true"
        android1:layout_marginTop="52dp"
        android1:src="@drawable/gsslogo" />

</RelativeLayout>